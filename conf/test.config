/*
 * -------------------------------------------------
 *  Nextflow config file for running tests data
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test.
 */

params {
	// Methylation calling params
	input = 'https://raw.githubusercontent.com/TheJacksonLaboratory/nanome/master/inputs/test.demo.filelist.txt'
	dsname = 'TestData'
	outputDir="outputs"

	// For evaluation/analysis configurations
	eval= false // true if running evaluation steps
	runid = "TestData_RRBS"

	// BS-seq data and encode
	bgEncode='bismark'
	bgTruth='/projects/li-lab/Nanopore_compare/data/NA19240/NA19240_RRBS_ENCFF000LZS_rep1.Read_R1.Rep_1_trimmed_bismark_bt2.CpG_report.txt.gz;/projects/li-lab/Nanopore_compare/data/NA19240/NA19240_RRBS_ENCFF000LZT_rep2.Read_R1.Rep_2_trimmed_bismark_bt2.CpG_report.txt.gz'
	bgtruth_cov=1 // BS-seq coverage cutoff
	tool_cov=1 // methylation calling tools' read coverage cutoff
}
